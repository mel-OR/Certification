{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es6",
      "module": "commonjs",
      "lib": ["esnext", "es6", "dom"],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "typeRoots": ["node_modules/@types"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }